.wrapper
  = render 'navbar'
  .login-wrapper
    %p
      %strong Title:
      = @bookmark.title
    %p
      %strong Url:
      = link_to @bookmark.url, @bookmark.url, target: "_blank"
    %p
      %strong Description
    %div.mb-5.mt-5
      = @bookmark.description
    = link_to 'Edit', edit_bookmark_path(@bookmark),class: 'border_spread_btn mr-2'
    |
    = link_to 'Delete', @bookmark, method: :delete,class: 'border_spread_btn mx-2', data: {confirm: "#{@bookmark.title ||= @bookmark.url} を削除します。よろしいですか？"}
    |
    = link_to 'Top page', root_path, class: 'border_spread_btn ml-2'
